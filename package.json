{
  "name": "@manuscripts/requirements",
  "version": "0.0.2",
  "author": "Alf Eaton <aeaton@atypon.com>",
  "license": "MIT",
  "main": "dist/cjs",
  "module": "dist/es",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "bin": {
    "manuscript-validator": "./dist/command.js"
  },
  "scripts": {
    "build": "concurrently 'yarn:build:*'",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:es": "tsc --outDir dist/es --declarationDir dist/types --declaration",
    "dev": "concurrently 'yarn:build:* --watch'",
    "lint": "eslint src --ext .ts,.tsx",
    "prebuild": "rimraf dist",
    "prettier": "prettier --write 'src/**/*.ts'",
    "preversion": "concurrently 'yarn:typecheck' 'yarn:lint' 'yarn:test'",
    "test": "jest --runInBand",
    "typecheck": "tsc --noEmit",
    "version": "yarn build"
  },
  "dependencies": {
    "@iarna/word-count": "^1.1.2",
    "@manuscripts/data": "^0.0.7",
    "@manuscripts/eslint-config": "^0.2.1",
    "@manuscripts/manuscript-transform": "^0.30.0",
    "@types/decompress": "^4.2.3",
    "chalk": "^4.1.0",
    "decompress": "^4.2.1",
    "fs-extra": "^9.0.1",
    "grapheme-splitter": "^1.0.4",
    "tempy": "^0.5.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@manuscripts/examples": "^0.0.7",
    "@manuscripts/manuscripts-json-schema": "^1.30.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.0",
    "@types/prosemirror-state": "^1.2.4",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "concurrently": "^5.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "prosemirror-model": "^1.10.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.5"
  }
}
